<h2>
  Cars
  <span class='text-right'><h6><%= link_to 'New Car', new_admin_car_path %></h6></span>
</h2>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>#</th>
        <th>Make</th>
        <th>Model</th>
        <th>Year</th>
        <th>Color</th>
        <th>NumOfSeats</th>
        <th>LicensePlate</th>
        <th>RentPrice</th>
        <th>Available</th>
        <th>Created At</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @cars.each do |c|%>
        <tr>
          <td><%= c.id %></td>
          <td><%= c.make %></td>
          <td><%= c.model %></td>
          <td><%= c.year %></td>
          <td><%= c.color %></td>
          <td><%= c.numOfSeats %></td>
          <td><%= c.licensePlate %></td>
          <td><%= c.rentPrice %></td>
          <td>
            <% if c.isAvailable %>
              <svg class="bi bi-check-circle-fill text-success" fill='currentColor' height='2.5em' viewbox='0 0 16 16' width='2.5em'>
                <path d='M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z' fill-rule='evenodd' />
              </svg>
            <% end %>
          </td>
          <td><%= c.created_at.strftime("%Y %b %d") %></td>
          <td>
            <%= link_to 'Edit', edit_admin_car_path(c), class: 'btn btn-secondary' %>  
            <%= link_to 'Delete', [:admin, c], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>