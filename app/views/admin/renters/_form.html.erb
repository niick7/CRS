<%= form_with(model: [:admin, renter], local: true, class: 'col-md-8 mb-3') do |f| %>
  <% if renter.errors.any? %>
    <%
      errors = renter.errors
      is_email_error = errors.messages.key?(:email)
      is_password_error = errors.messages.key?(:password)
      is_firstName_error = errors.messages.key?(:firstName)
      is_lastName_error = errors.messages.key?(:lastName)
      is_phoneNumber_error = errors.messages.key?(:phoneNumber)
    %>
  <% end %>

  <div class="form-row">
    <div class="form-group mb-3">
      <label>Email</label>
      <%= f.email_field :email, class: "form-control #{'is-invalid' if is_email_error}", disabled: action_name == 'edit' %>
      <% if is_email_error %>
        <div class="text-danger">
          <% errors.messages[:email].each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group mb-3">
      <label>Password</label>
      <%= f.password_field :password, class: "form-control #{'is-invalid' if is_password_error}", disabled: action_name == 'edit' %>
      <% if is_password_error %>
        <div class="text-danger">
          <% errors.messages[:password].each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group mb-3">
      <label>First Name</label>
      <%= f.text_field :firstName, class: "form-control #{'is-invalid' if is_firstName_error}" %>
      <% if is_firstName_error %>
        <div class="text-danger">
          <% errors.messages[:firstName].each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group mb-3">
      <label>Last Name</label>
      <%= f.text_field :lastName, class: "form-control #{'is-invalid' if is_lastName_error}" %>
      <% if is_lastName_error %>
        <div class="text-danger">
          <% errors.messages[:lastName].each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group mb-3">
      <label>Phone Number</label>
      <%= f.text_field :phoneNumber, class: "form-control #{'is-invalid' if is_phoneNumber_error}" %>
      <% if is_phoneNumber_error %>
        <div class="text-danger">
          <% errors.messages[:phoneNumber].each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Save</button>
<% end %>